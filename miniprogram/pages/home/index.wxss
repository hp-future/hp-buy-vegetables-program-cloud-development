/* pages/home/index.wxss */
.home-container {
  width: 100vw;
  height: 100vh;
  display: flex;
}
.home-container .aside {
  width: 160rpx;
  height: 100%;
  border-right: 1px solid #eee;
  box-sizing: border-box;
  background-color: #efefef;
}
.home-container .content {
  flex: 1;
  height: 100%;
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
  background-color: #f8f8f8;
}
.home-container .aside .aside-item {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}
.home-container .aside .is-active {
  color: #4CD964;
  background-color: #f8f8f8;
}
.home-container .content .content-item {
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  position: relative;
}
.home-container .content .content-item .goods-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.home-container .content .content-item .goods-content {
  flex: 1;
  height: 100%;
  margin-left: 10rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.home-container .content .content-item .goods-name {
  width: 100%;
  flex-shrink: 0;
}
.home-container .content .content-item .goods-price {
  width: 100%;
  flex-shrink: 0;
  margin-top: auto;
  color: red;
}
.home-container .content .content-item .goods-price > text {
  font-size: 24rpx;
}
.home-container .content .content-item .cart-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 48rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  background-color: #4CD964;
  color: #fff;
  border-radius: 50%;
  font-size: 26rpx;
}
.home-container .content .content-item .cart-btn .goods-count {
  position: absolute;
  right: -16rpx;
  top: 0;
  width: 28rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  border-radius: 50%;
  background-color: red;
  font-size: 24rpx;
  padding: 4rpx;
  transform: scale(0.8);
}