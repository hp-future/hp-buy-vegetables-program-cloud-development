.count-container {
  width: 180rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #eee;
  border-radius: 4rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}
.count-container .content {
  width: 100%;
  height: 100%;
  display: flex;
}
.count-container .content .btn {
  width: 60rpx;
  height: 100%;
  text-align: center;
  background-color: #f3f3f3;
}
.count-container .content .count-box {
  flex: 1;
  height: 100%;
  color: #333;
  font-size: 28rpx;
  text-align: center;
}