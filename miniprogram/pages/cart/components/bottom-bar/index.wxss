.bottom-bar-container {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  flex-flow: row-reverse;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-top: 1px solid #eee;
}
.btn {
  font-size: 28rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: red;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
  padding: 0 30rpx;
}
.total-price {
  color: red;
  margin-right: 20rpx;
}
.total-price > text {
  font-size: 26rpx;
}
.total {
  font-size: 26rpx;
  transform: scale(0.8);
}