.cart-container {
  width: 100vw;
  height: 100vh;
}
.cart-container .top {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.cart-container .cart-content {
  width: 100%;
  height: calc(100% - 60rpx);
  overflow-y: auto;
  background-color: #f8f8f8;
}
.cart-container .cart-content .cart-item {
  height: 200rpx;
  margin: 0 20rpx 20rpx 20rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.delete-btn {
  float: right;
}
.cart-container .cart-content .cart-item > image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.cart-container .cart-content .cart-item .goods-content {
  flex: 1;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  font-size: 28rpx;
  margin-left: 10rpx;
  position: relative;
}
.goods-name {
  width: 100%;
  flex-shrink: 0;
}
.goods-price {
  margin-top: auto;
  width: 100%;
  flex-shrink: 0;
  color: red;
}
.goods-price > text {
  font-size: 24rpx;
}
checkbox {
  transform: scale(0.8);
  margin-right: 10rpx;
}