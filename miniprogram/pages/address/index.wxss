.address-container {
  width: 100vw;
  height: 100vh;
  background-color: #f3f3f3;
}
.address-container .content {
  width: 100%;
  height: calc(100% - 120rpx);
  overflow-y: auto;
}
.address-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background-color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
}
.address-item > view {
  width: 100%;
}
.address-item > view:nth-child(1) {
  font-size: 28rpx;
  font-weight: 400;
}
.address-item > view:nth-child(2) {
  font-size: 24rpx;
}
.address-item .icon-bianji {
  position: absolute;
  right: 20rpx;
  top: 28rpx;
  z-index: 110;
  color: #4CD964;
}
.address-item > view:nth-child(3) {
  font-size: 20rpx;
  color: #bbb;
}
.address-container .footer {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  height: 80rpx;
  text-align: center;
}
.address-container .footer .btn {
  margin: 0 auto;
  height: 60rpx;
  background-color: #4CD964;
  color: #fff;
  font-size: 28rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  border-radius: 60rpx;
  margin-top: 10rpx;
}
.address-container .footer .btn .icon_add {
  margin-right: 16rpx;
  font-size: 50rpx;
}